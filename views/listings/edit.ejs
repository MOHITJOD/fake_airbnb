<% layout("/layouts/boilerPlate")%>
<body>
    <h1>edit here</h1>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
    
    <div>
        <label class="form-label" for="title">Title:</label>
        <input name="listing[title]" type="text" value="<%=listing.title%>" class="form-control"><br><br>
    </div>
        <div>
        <label class="form-label" for="image">Image:</label>
        <input name="listing[image]" type="text" value="<%=listing.image%>" class="form-control"><br><br>
    </div>
        <div>
        <label class="form-label" for="description">Description:</label>
        <textarea name="listing[description]" class="form-control"><%=listing.description%></textarea><br><br>
    </div>
    <div>
        <label class="form-label" for="price">Price:</label>
        <input name="listing[price]" type="text" value="<%= listing.price %>" class="form-control"><br><br>
    </div>
        <div>
        <label class="form-label" for="location">Location:</label>
        <input name="listing[location]" type="text" value="<%=listing.location%>" class="form-control"><br><br>
    </div>
        <div>    
        <label class="form-label" for="country">Country:</label>
        <input name="listing[country]" type="text" value="<%=listing.country%>" class="form-control"><br><br>
    </div>
        <button>Edit</button>
</form>
</body>
