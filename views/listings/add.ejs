
<% layout("/layouts/boilerPlate")%>
<body>
    <h1>Here you can add new property!</h1>
    <form method="POST" action="/listings">
       
       <div>
        <!-- <label for="title" class="form-label"></label> -->
        <input type="text" name="listing[title]" placeholder="Property Name" required class="form-control"><br><br>
   </div>
       <div>
        <!-- <label for="image" class="form-label"></label> -->
        <input type="text" placeholder="Image URL" name="listing[image]" required class="form-control"><br><br>
    </div>
        <div>
            <!-- <label for="description" class="form-label"></label> -->
            <textarea  placeholder="Description" name="listing[description]" required class="form-control"></textarea><br><br>
    </div>
        <div>
            <!-- <label for="price" class="form-label"></label> -->
            <input type="number" name="listing[price]" placeholder="Price" required class="form-control"><br><br>
    </div>
       <div>
        <!-- <label for="location" class="form-label"></label> -->
        <input type="text" placeholder="Property Location" name="listing[location]" required class="form-control"><br><br>
    </div>
       <div>
        <!-- <label for="country" class="form-label"></label> -->
        <input type="text" placeholder="Country" name="listing[country]" required class="form-control"><br><br>
    </div>
        
        <button type="submit">Submit</button>
    </form>
</body>
                 