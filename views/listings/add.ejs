
<% layout("/layouts/boilerPlate")%>
<body>
    <h1>Here you can add new property!</h1>
    <form method="POST" action="/listings">
        <input type="text" name="listing[title]" placeholder="Property Name" required><br><br>
        <input type="text" placeholder="Image URL" name="listing[image]" required><br><br>
        <textarea  placeholder="Description" name="listing[description]" required></textarea><br><br>
        <input type="number" name="listing[price]" placeholder="Price" required><br><br>
        <input type="text" placeholder="Property Location" name="listing[location]" required><br><br>
        <input type="text" placeholder="Country" name="listing[country]" required><br><br>
        <button type="submit">Submit</button>
    </form>
</body>
                 